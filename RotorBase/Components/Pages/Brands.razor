@page "/brands"
@rendermode InteractiveServer
@using System.Net.Http.Json
@inject HttpClient Http

<h1>Brands</h1>

@if (Items is null)
{
    <p>Loading...</p>
}
else if (Items.Count == 0)
{
    <p class="text-muted">No brands found.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-3">
        @foreach (var b in Items)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-1">@b.name</h5>
                            @if (!string.IsNullOrWhiteSpace(b.website))
                            {
                                <a href="@b.website" target="_blank" rel="noopener" class="small">@b.website</a>
                            }
                        </div>
                        <div class="text-end">
                            <div class="badge bg-secondary">@b.part_count parts</div>
                            <div>
                                <a class="btn btn-sm btn-primary mt-2" href="/brands/@b.brand_id">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    record BrandRow(long brand_id, string name, string? website, long part_count);
    List<BrandRow>? Items;

    protected override async Task OnInitializedAsync()
    {
        Items = await Http.GetFromJsonAsync<List<BrandRow>>("/api/brands");
    }
}
